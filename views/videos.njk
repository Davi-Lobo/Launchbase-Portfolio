{% extends "layout.njk" %}

{% block head %}
<title>Videos - Davi Lobo</title>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons"rel="stylesheet">
{% endblock %}

{% block content %}

<main id="main-content" class="_grid">
    <h1>Aulas</h1>
    
    <section class="grid-container">
        {%for item in items%}
        <div class="card-item" id="{{item.id}}">
            <div class="wrapper">
                <img class="img" src="https://img.youtube.com/vi/{{item.id}}/maxresdefault.jpg" alt="Imagem de {{item.title}}">
            </div>
            <div class="info">
                <h2 class="title">{{item.title}}</h2>
                <p class="text">{{item.duration}}</p>
                <p class="text">{{item.price}}</p>
                <a class="openModal" id="{{item.id}}">Modal</a>
            </div>
        </div>
        {% endfor %}
    </section>
</main>

<div class="modal-overlay">
    <div class="modal">
        <div class="close-button">
            <i class="material-icons button">close</i>
        </div>

        <div class="content">
            <iframe class="video" src="" frameborder="0"></iframe>
        </div>
    </div>
</div>

<script src="assets/js/video-modal.js"></script>
{% endblock %}
